<!-- Views/AddTransactionDialog.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PersonalFinanceTracker.Views.AddTransactionDialog"
        Title="Add Transaction"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Description" Margin="0,10,0,0"/>
        <TextBox x:Name="DescriptionTextBox" />
        <TextBlock Text="Category" Margin="0,10,0,0"/>
        <TextBox x:Name="CategoryTextBox" />
        <TextBlock Text="Amount" Margin="0,10,0,0"/>
        <TextBox x:Name="AmountTextBox" />
        <TextBlock Text="Is Income" Margin="0,10,0,0"/>
        <CheckBox x:Name="IsIncomeCheckBox" />
        <Button Content="Add" Click="OnAddClick" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
